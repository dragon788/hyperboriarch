# Variables listed here are applicable to all host groups.
# The defaults should be sane for most setups, but can be adjusted below.

# where on the remote machine to build cjdns
cjdns_build_dir: "/usr/local/src/cjdns-git"

# the network time protocol servers to utilize
ntp_servers:
  - "0.us.pool.ntp.org"
  - "1.us.pool.ntp.org"
  - "2.us.pool.ntp.org"
  - "3.us.pool.ntp.org"

# the host's public ip address(es) to bind ssh to
sshd_listenaddress:
  - "{{ ansible_eth1['ipv4']['address'] }}"

# the path on the *controlling* machine to the user's ssh pubkey
ssh_pubkey: "{{ lookup('env','HOME') }}/.ssh/id_rsa.pub"

# the administrative user to create on the remote box(es)
user: "{{ lookup('env','USER') }}"


# *** DO NOT EDIT BELOW THIS LINE ***
ansible_python_interpreter: /usr/bin/python2
